// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Launch dap",
			"program": "${workspaceFolder}/brainfuck-dap/target/debug/brainfuck-dap.exe",
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "attach",
			"name": "Attach",
			"program": "${workspaceFolder}/brainfuck-lsp/target/debug/brainfuck-lsp.exe"
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/vscode-brainfuck"
			],
			"outFiles": [
				"${workspaceRoot}/vscode-brainfuck/client/out/**/*.js"
			],
			"preLaunchTask": "build all"
		},
	],
}